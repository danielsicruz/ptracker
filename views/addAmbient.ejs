      <div id="navbarSearch" class="navbar-search w-100 collapse">
        <input
          class="form-control w-100 rounded-0 border-0"
          type="text"
          placeholder="Search"
          aria-label="Search"
        />
      </div>
    </header>

    <div class="container-fluid">
      <div class="row">
        <%- include('./components/sidebar') %>

        <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
          <div class="container">
            <div class="row">
              <div class="row">
                <h3 class="pt-3">Adicionando ambientes</h3>
              </div>
              <div id="objectData" class="row row-cols-1 row-cols-md-3 g-4">
                <div class="col-md-7 col-lg-8">
                  <form class="needs-validation" novalidate>
                    <div class="row g-3">
                      <div class="col-sm-6">
                        <label for="placeId" class="form-label">Id</label>
                        <div class="input-group has-validation">
                          <input
                            type="text"
                            class="form-control"
                            id="placeId"
                            placeholder=""
                            value=""
                            required
                          />
                          <div class="invalid-feedback">
                            Preencha o numero de identificação visual do lugar
                          </div>
                        </div>
                      </div>

                      <div class="col-sm-6">
                        <label for="placeName" class="form-label">Nome</label>
                        <div class="input-group has-validation">
                          <input
                            type="text"
                            class="form-control"
                            id="placeName"
                            placeholder=""
                            value=""
                            required
                          />
                          <div class="invalid-feedback">
                            Preencha o nome do lugar a ser adicionado
                          </div>
                        </div>
                      </div>
                      <div class="col-12">
                        <label for="contextList" class="form-label"
                          >Inserido em</label
                        >
                        <div
                          class="alert alert-danger"
                          hidden
                          id="placeAlert"
                          role="alert"
                        >
                          Defina um contexto para esse ambiente
                        </div>
                        <div class="dropdown">
                          <button
                            class="btn btn-secondary dropdown-toggle"
                            type="button"
                            data-bs-toggle="dropdown"
                            aria-expanded="false"
                            id="contextButton"
                          >
                            Contexto
                          </button>
                          <ul class="dropdown-menu" id="contextList">
                            <li id="addContext">Adicionar contexto</li>
                          </ul>
                        </div>
                      </div>
                    </div>

                    <div class="mx-auto pt-3 text-center">
                      <button
                        class="btn btn-secondary"
                        type="button"
                        id="btnMorePlaces"
                      >
                        Clique aqui para adicionar mais ambientes
                      </button>
                      <button
                        class="btn btn-outline-success px-4 col-3 mx-auto"
                        type="button"
                        id="saveButton"
                      >
                        Salvar
                      </button>
                    </div>
                  </form>
                </div>
              </div>
            </div>
            <div id="morePlacesDiv" hidden class="row row-cols-md-3 pt-3">
              <div
                id="morePlacesInputDiv1"
                class="input-group has-validation col-sm-3 p-2"
              >
                <div class="col-sm-4">
                  <label for="morePlacesInputId1" class="form-label">Id</label>
                  <div class="input-group has-validation">
                    <input
                      type="text"
                      class="form-control"
                      id="morePlacesInputId1"
                      placeholder=""
                      value=""
                      required
                    />
                    <div class="invalid-feedback">
                      Preencha a identificação visual do lugar a ser cadastrado
                    </div>
                  </div>
                </div>

                <div class="col-sm-4">
                  <label for="morePlacesInputName1" class="form-label"
                    >Nome</label
                  >
                  <div class="input-group has-validation">
                    <input
                      type="text"
                      class="form-control"
                      id="morePlacesInputName1"
                      placeholder=""
                      value=""
                      required
                      onkeydown="testForRender(event)"
                    />
                    <div class="invalid-feedback">
                      Preencha o nome do lugar a ser adicionado
                    </div>
                  </div>
                </div>
                <div class="col-sm-3 pt-2 mx-auto mt-4">
                  <button
                    type="button"
                    rownumber="1"
                    class="btn btn-outline-danger"
                    onclick="removeSimilar(this)"
                  >
                    Remover
                  </button>
                </div>
              </div>

              <div class="col-sm-3 pt-2" id="addMorePlacesDiv">
                <button
                  type="button"
                  id="addMorePlaces"
                  class="btn btn-outline-success"
                >
                  Adicionar
                </button>
              </div>
            </div>
          </div>
        </main>
      </div>
    </div>
    <script src="/assets/dist/js/bootstrap.bundle.min.js"></script>

    <script
      src="https://cdn.jsdelivr.net/npm/chart.js@4.2.1/dist/chart.umd.min.js"
      integrity="sha384-gdQErvCNWvHQZj6XZM0dNsAoY4v+j5P1XDpNkcM3HJG1Yx04ecqIHk7+4VBOCHOG"
      crossorigin="anonymous"
    ></script>
    <script src="/assets/js/addAmbient.js"></script>
    <script src="/assets/js/dashboard.js"></script>
  </body>
</html>
